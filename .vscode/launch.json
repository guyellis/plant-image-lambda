{
  "version": "0.2.0",
  "configurations": [{
    "name": "Unit Test",
    "type": "node",
    "request": "launch",
    "program": "${workspaceRoot}/node_modules/.bin/jest",
    "args": ["-i"],
    "env": {
      "NODE_ENV": "development",
    },
    "cwd": "${workspaceRoot}"
  }, {
    "name": "Unit Test Focused",
    "type": "node",
    "request": "launch",
    "program": "${workspaceRoot}/node_modules/.bin/jest",
    "args": [
      "${workspaceRoot}/test/test.index.js", // replace this file with the file to focus
      "-i",
      "--forceExit"
    ],
    "env": {
      "NODE_ENV": "development",
    },
    "cwd": "${workspaceRoot}"
  }]
}